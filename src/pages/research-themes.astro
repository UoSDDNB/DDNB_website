---
import BaseLayout from '../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';

const themes = await getCollection('themes');
const sortedThemes = themes.sort((a, b) => a.data.order - b.data.order);
const basePath = import.meta.env.BASE_URL;
const baseUrl = basePath.endsWith('/') ? basePath : basePath + '/';
---

<BaseLayout title="Research Themes - Data-Driven Network Biology Group">
  <!-- Hero Section -->
  <section class="py-16 bg-gradient-to-r from-tekhelet to-tekhelet-100 text-white">
    <div class="container-custom">
      <div class="max-w-3xl mx-auto text-center">
        <h1 class="text-4xl md:text-5xl font-bold mb-6">Research Themes</h1>
        <p class="text-xl opacity-90">
          Our research spans multiple areas of computational biology, using deep learning 
          to understand and predict cellular behavior from molecular data.
        </p>
      </div>
    </div>
  </section>
  
  <!-- Mission Statement -->
  <section class="py-12 bg-white">
    <div class="container-custom">
      <div class="max-w-4xl mx-auto text-center">
        <h2 class="text-2xl font-semibold text-gray-900 mb-6">Our Mission</h2>
        <p class="text-lg text-gray-700 leading-relaxed">
          We develop and apply deep learning approaches to understand biological systems at the molecular level. 
          Our work focuses on using foundation models and machine learning to analyze single-cell data, 
          predict cellular responses to perturbations, and design therapeutic sequences.
        </p>
      </div>
    </div>
  </section>
  
  <!-- Research Themes - Full Details -->
  {sortedThemes.map((theme, index) => (
    <section 
      id={theme.slug} 
      class={`py-16 ${index % 2 === 0 ? 'bg-gray-50' : 'bg-white'}`}
    >
      <div class="container-custom">
        <div class={`max-w-6xl mx-auto grid grid-cols-1 lg:grid-cols-2 gap-12 items-center ${index % 2 === 1 ? 'lg:flex-row-reverse' : ''}`}>
          <div class={index % 2 === 1 ? 'lg:order-2' : ''}>
            <img 
              src={`${baseUrl}${theme.data.image.replace(/^\//, '')}`}
              alt={`${theme.data.title} visualization`}
              class="w-full h-80 object-cover rounded-lg shadow-lg"
            />
          </div>
          <div class={index % 2 === 1 ? 'lg:order-1' : ''}>
            <h2 class="text-3xl font-bold text-gray-900 mb-4">{theme.data.title}</h2>
            <p class="text-lg text-gray-600 mb-6">{theme.data.description}</p>
            <div class="prose prose-gray max-w-none text-gray-700">
              <Fragment set:html={theme.body.replace(/\*\*(.*?)\*\*/g, '<strong class="text-tekhelet">$1</strong>').replace(/\n\n/g, '</p><p class="mb-4">')} />
            </div>
          </div>
        </div>
      </div>
    </section>
  ))}
  
  <!-- Call to Action -->
  <section class="py-16 bg-gradient-to-r from-tekhelet to-skyMagenta text-white">
    <div class="container-custom">
      <div class="max-w-3xl mx-auto text-center">
        <h2 class="text-3xl font-bold mb-6">Interested in Our Research?</h2>
        <p class="text-lg opacity-90 mb-8">
          We're always looking for talented researchers to join our group. 
          Whether you're interested in deep learning, single-cell biology, or computational genomics, 
          we'd love to hear from you.
        </p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <a href="/team" class="bg-white text-tekhelet px-6 py-3 rounded-lg font-semibold hover:bg-gray-100 transition-colors duration-200">
            Meet the Team
          </a>
          <a href="mailto:ddnetbio@soton.ac.uk" class="border-2 border-white text-white px-6 py-3 rounded-lg font-semibold hover:bg-white/10 transition-colors duration-200">
            Get in Touch
          </a>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>
