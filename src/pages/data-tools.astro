---
import BaseLayout from '../layouts/BaseLayout.astro';
---

<BaseLayout title="Data & Tools - Coming Soon">
  <!-- Hero Section -->
  <section class="py-16 bg-gradient-to-r from-tekhelet to-tekhelet-100 text-white">
    <div class="container-custom">
      <div class="max-w-3xl mx-auto text-center">
        <h1 class="text-4xl md:text-5xl font-bold mb-6">Data & Tools</h1>
        <p class="text-xl opacity-90">
          Computational resources and datasets for the research community
        </p>
      </div>
    </div>
  </section>
  
  <!-- Coming Soon Section -->
  <section class="py-24 bg-white">
    <div class="container-custom">
      <div class="max-w-2xl mx-auto text-center">
        <div class="w-24 h-24 bg-tekhelet/10 rounded-full flex items-center justify-center mx-auto mb-8">
          <svg class="w-12 h-12 text-tekhelet" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 20l4-16m4 4l4 4-4 4M6 16l-4-4 4-4"/>
          </svg>
        </div>
        <h2 class="text-3xl font-bold text-gray-900 mb-4">Coming Soon</h2>
        <p class="text-lg text-gray-600 mb-8">
          We're preparing to share our computational tools, software packages, and datasets. 
          Check back soon for access to resources that support single-cell analysis, network biology, and more.
        </p>
        <a href="/" class="btn-primary">
          Return to Home
        </a>
      </div>
    </div>
  </section>
</BaseLayout>
