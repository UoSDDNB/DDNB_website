---
import BaseLayout from '../layouts/BaseLayout.astro';
---

<BaseLayout title="Research Hacks - Coming Soon">
  <!-- Hero Section -->
  <section class="py-16 bg-gradient-to-r from-tekhelet to-tekhelet-100 text-white">
    <div class="container-custom">
      <div class="max-w-3xl mx-auto text-center">
        <h1 class="text-4xl md:text-5xl font-bold mb-6">Research Hacks</h1>
        <p class="text-xl opacity-90">
          Innovative approaches to solving complex biological problems
        </p>
      </div>
    </div>
  </section>
  
  <!-- Coming Soon Section -->
  <section class="py-24 bg-white">
    <div class="container-custom">
      <div class="max-w-2xl mx-auto text-center">
        <div class="w-24 h-24 bg-tekhelet/10 rounded-full flex items-center justify-center mx-auto mb-8">
          <svg class="w-12 h-12 text-tekhelet" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19.428 15.428a2 2 0 00-1.022-.547l-2.387-.477a6 6 0 00-3.86.517l-.318.158a6 6 0 01-3.86.517L6.05 15.21a2 2 0 00-1.806.547M8 4h8l-1 1v5.172a2 2 0 00.586 1.414l5 5c1.26 1.26.367 3.414-1.415 3.414H4.828c-1.782 0-2.674-2.154-1.414-3.414l5-5A2 2 0 009 10.172V5L8 4z"/>
          </svg>
        </div>
        <h2 class="text-3xl font-bold text-gray-900 mb-4">Coming Soon</h2>
        <p class="text-lg text-gray-600 mb-8">
          We're working on documenting our research hackathons and innovative problem-solving approaches. 
          Check back soon for updates on our latest research hacks and collaborative projects.
        </p>
        <a href="/" class="btn-primary">
          Return to Home
        </a>
      </div>
    </div>
  </section>
</BaseLayout>
