---
import BaseLayout from '../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';
// Hacks page showing research hackathons

const hacks = await getCollection('hacks');
const sortedHacks = hacks.sort((a, b) => new Date(b.data.date).getTime() - new Date(a.data.date).getTime());
---

<BaseLayout title="Hacks - Data-Driven Network Biology Group">
  <!-- Hero Section -->
  <section class="py-16 bg-gradient-to-r from-brand-primary to-brand-dark text-white">
    <div class="container-custom">
      <div class="max-w-3xl mx-auto text-center">
        <h1 class="text-4xl md:text-5xl font-bold mb-6">Research Hacks</h1>
        <p class="text-xl opacity-90">
          Intensive, collaborative research sessions where we tackle big challenges in computational biology. 
          Our hacks bring together researchers from different backgrounds to solve complex problems in a short timeframe.
        </p>
      </div>
    </div>
  </section>
  
  <!-- What are Hacks Section -->
  <section class="py-16 bg-white">
    <div class="container-custom">
      <div class="max-w-4xl mx-auto">
        <h2 class="text-3xl font-bold text-gray-900 mb-8 text-center">What are Research Hacks?</h2>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
          <div class="card">
            <h3 class="text-xl font-semibold text-gray-900 mb-4">Intensive Collaboration</h3>
            <p class="text-gray-600">
              Our hacks are intensive, multi-day sessions where researchers from different backgrounds 
              come together to tackle complex biological problems using computational approaches.
            </p>
          </div>
          <div class="card">
            <h3 class="text-xl font-semibold text-gray-900 mb-4">Rapid Prototyping</h3>
            <p class="text-gray-600">
              We focus on rapid prototyping and proof-of-concept development, creating tools and 
              analyses that can be refined and published in follow-up work.
            </p>
          </div>
          <div class="card">
            <h3 class="text-xl font-semibold text-gray-900 mb-4">Cross-Disciplinary Learning</h3>
            <p class="text-gray-600">
              Hacks provide opportunities for researchers to learn new techniques, share expertise, 
              and build lasting collaborations across different research areas.
            </p>
          </div>
          <div class="card">
            <h3 class="text-xl font-semibold text-gray-900 mb-4">Open Science</h3>
            <p class="text-gray-600">
              All hack outcomes are made publicly available, including code, data, and documentation, 
              contributing to the open science movement in computational biology.
            </p>
          </div>
        </div>
      </div>
    </div>
  </section>
  
  <!-- Hacks Timeline -->
  <section class="py-16 bg-gray-50">
    <div class="container-custom">
      <h2 class="text-3xl font-bold text-gray-900 mb-12 text-center">Recent Hacks</h2>
      
      <div class="max-w-4xl mx-auto space-y-8">
        {sortedHacks.map((hack) => (
          <div class="card group cursor-pointer" onclick={`window.location.href='/hacks/${hack.slug}'`}>
            <div class="flex flex-col md:flex-row gap-6">
              <!-- Image -->
              <div class="md:w-1/3">
                <img 
                  src={hack.data.image} 
                  alt={`${hack.data.title} hack`}
                  class="w-full h-48 md:h-full object-cover rounded-lg group-hover:scale-105 transition-transform duration-300"
                />
              </div>
              
              <!-- Content -->
              <div class="md:w-2/3">
                <div class="flex items-center gap-4 mb-3">
                  <div class="flex items-center text-sm text-gray-500">
                    <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
                    </svg>
                    {new Date(hack.data.date).toLocaleDateString('en-GB', { 
                      year: 'numeric', 
                      month: 'long', 
                      day: 'numeric' 
                    })}
                  </div>
                </div>
                
                <h3 class="text-2xl font-bold text-gray-900 mb-3 group-hover:text-brand-primary transition-colors duration-200">
                  {hack.data.title}
                </h3>
                
                <p class="text-gray-600 mb-4 leading-relaxed">
                  {hack.data.summary}
                </p>
                
                <!-- Objectives -->
                <div class="mb-4">
                  <h4 class="text-sm font-semibold text-gray-900 mb-2">Key Objectives:</h4>
                  <ul class="text-sm text-gray-600 space-y-1">
                    {hack.data.objectives.slice(0, 3).map(objective => (
                      <li class="flex items-start">
                        <span class="text-brand-primary mr-2">•</span>
                        {objective}
                      </li>
                    ))}
                    {hack.data.objectives.length > 3 && (
                      <li class="text-gray-500">+{hack.data.objectives.length - 3} more objectives</li>
                    )}
                  </ul>
                </div>
                
                <!-- Links -->
                <div class="flex flex-wrap gap-3">
                  {hack.data.links.github && (
                    <a 
                      href={hack.data.links.github} 
                      target="_blank" 
                      rel="noopener noreferrer"
                      class="inline-flex items-center text-sm text-brand-primary hover:text-brand-accent transition-colors duration-200"
                      onclick="event.stopPropagation()"
                    >
                      <svg class="w-4 h-4 mr-1" fill="currentColor" viewBox="0 0 24 24">
                        <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
                      </svg>
                      GitHub
                    </a>
                  )}
                  {hack.data.links.datasets && hack.data.links.datasets.length > 0 && (
                    <a 
                      href={hack.data.links.datasets[0]} 
                      target="_blank" 
                      rel="noopener noreferrer"
                      class="inline-flex items-center text-sm text-brand-primary hover:text-brand-accent transition-colors duration-200"
                      onclick="event.stopPropagation()"
                    >
                      <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"/>
                      </svg>
                      Datasets
                    </a>
                  )}
                  <span class="inline-flex items-center text-sm text-gray-500">
                    <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"/>
                    </svg>
                    Read more →
                  </span>
                </div>
              </div>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>
  
  <!-- Call to Action -->
  <section class="py-16 bg-white">
    <div class="container-custom">
      <div class="max-w-3xl mx-auto text-center">
        <h2 class="text-3xl font-bold text-gray-900 mb-6">Interested in Participating?</h2>
        <p class="text-lg text-gray-600 mb-8">
          We regularly organize research hacks and welcome participants from all backgrounds. 
          Whether you're a computational biologist, experimentalist, or data scientist, 
          there's always a place for you in our hacks.
        </p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <a href="mailto:ddnetbio@soton.ac.uk" class="btn-primary">
            Get Involved
          </a>
          <a href="https://github.com/SGDDNB" target="_blank" rel="noopener noreferrer" class="btn-secondary">
            View Past Hacks
          </a>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>
